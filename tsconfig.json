{
	"compilerOptions": {
		"importHelpers": true,
		"module": "commonjs",
		"noUnusedLocals": true,
		"outDir": "lib",
		"removeComments": true,
		"strict": true,
        "target": "es2017",
        "types": [
			"chai-as-promised",
			"intern",
			"sinon-chai"
        ]
	},
	"include": [
		"./src/**/*",
		"./tests/**/*"
	]
}
